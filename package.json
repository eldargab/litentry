{
  "name": "squid",
  "description": "Squid processors for substrate.",
  "private": true,
  "scripts": {
    "start:khala": "yarn restartdb && make processKhala",
    "start:polkadot": "yarn restartdb && make processPolkadot",
    "start:kusama": "yarn restartdb && make processKusama",
    "processor:khala:start": "node lib/processors/khalaProcessor.js",
    "processor:polkadot:start": "node lib/processors/polkadotProcessor.js",
    "processor:kusama:start": "node lib/processors/kusamaProcessor.js",
    "build": "rm -rf lib && tsc",
    "restartdb": "make down && make up && make build && make migrate",
    "query-node:start": "squid-graphql-server"
  },
  "dependencies": {
    "@polkadot/api": "^6.11.1",
    "@polkadot/types": "^6.11.1",
    "@subsquid/graphql-server": "^0.1.4",
    "@subsquid/ss58": "^0.0.3",
    "@subsquid/substrate-processor": "^0.2.6",
    "bignumber.js": "^9.0.2",
    "dotenv": "^10.0.0",
    "pg": "^8.7.1",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@subsquid/cli": "^0.1.1",
    "@subsquid/substrate-metadata-explorer": "^0.0.7",
    "@subsquid/substrate-typegen": "^0.2.0",
    "@types/node": "^16.11.17",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "eslint": "7.26.0",
    "prettier": "^2.3.2",
    "typescript": "~4.5.4"
  }
}
